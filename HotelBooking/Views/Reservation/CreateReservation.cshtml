@model HotelBooking.Domain.ViewModels.Reservation.CreateReservationViewModel
@{
    ViewData["Title"] = "Create reservation Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Room Reservation</title>
    <!-- Подключение стилей Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
    body {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body>
<div class="container">
    <h1 class="mt-5">Create Room Reservation</h1>
    <form method="post" asp-controller="Reservation" asp-action="CreateReservation">
        <div class="mb-3">
            <label for="hotelRoomId" class="form-label">Hotel Room ID</label>
            <input asp-for="HotelRoomId" type="text" class="form-control" id="hotelRoomId" required>
        </div>
        <div class="mb-3">
            <label for="checkInDate" class="form-label">Check-In Date</label>
            <input asp-for="CheckInDate" type="date" class="form-control" id="checkInDate" required>
        </div>
        <div class="mb-3">
            <label for="checkOutDate" class="form-label">Check-Out Date</label>
            <input asp-for="CheckOutDate" type="date" class="form-control" id="checkOutDate" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<!-- Подключение скриптов Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>