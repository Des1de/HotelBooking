@model HotelBooking.Domain.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
}

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .registration-container {
            margin-top: 100px;
        }
        
        .registration-card {
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            padding: 20px;
        }

        .login-link {
            float: right;
            margin-top: 10px;
        }
        
        .login-link:hover, .login-link:focus {
            box-shadow: none;
        }
    </style>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="registration-container">
                    <div class="registration-card">
                        <h3 class="mb-4 text-center">Sign Up</h3>
                        <form method="post" asp-controller="Account" asp-action="SignUp">
                            <div class="mb-3">
                                <label for="username" class="form-label">Email</label>
                                <input asp-for="Email"  type="text" class="form-control" placeholder="Enter email">
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control"  placeholder="Enter Password">
                            </div>
                            <div class="mb-3">
                                <label for="confirm-password" class="form-label">Confirm Password</label>
                                <input asp-for="PasswordConfirm" type="password" class="form-control"  placeholder="Confirm Password">
                            </div>
                            <button type="submit" class="btn btn-primary">SignUp</button>
                            <a asp-controller="Account" asp-action="SignIn" class="btn btn-link text-muted login-link" >Has account? SignIn</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>