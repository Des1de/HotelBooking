
@using HotelBooking.Domain.Enum
@model IEnumerable<HotelBooking.Domain.ViewModels.User.GetUsersViewModel>
@{
    ViewData["Title"] = "Users Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>User List</title>
</head>
<body>
<div class="container">
    <h1>User List</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Role == Role.User.ToString())
                    {
                        <button class="btn btn-primary" ><a asp-area="" asp-controller="User" asp-action="ChangeRole" asp-route-id="@user.Id">To Admin</a></button>
                    }
                    else
                    {
                        <button class="btn btn-primary" ><a asp-area="" asp-controller="User" asp-action="ChangeRole" asp-route-id="@user.Id">To User</a></button>
                    }
                </td>
                <td>
                    <button class="btn btn-danger" ><a asp-area="" asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a></button>
                </td>
            </tr>
        }
        
        
        <!-- Добавьте другие строки пользователей здесь -->
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>