@model HotelBooking.Domain.ViewModels.GetHotelViewModel
@{
    ViewData["Title"] = "Hotel Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Details</title>
    <!-- Подключение стилей Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="hotel-image.jpg" alt="Hotel Image" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">Rating: @Model.Rating</p>
                    <p class="card-text">Country: @Model.Country</p>
                    <p class="card-text">City: @Model.City</p>
                    <p class="card-text">Street: @Model.Street</p>
                    <p class="card-text">Building: @Model.Building</p>
                    <div class="mt-3">
                        <button class="btn btn-danger me-2"><a asp-area="" asp-controller="Hotel" asp-action="DeleteHotel" asp-route-id="@Model.Id">Delete</a></button>
                        <button class="btn btn-success"><a asp-area="" asp-controller="Hotel" asp-action="EditHotel" asp-route-id="@Model.Id">Edit</a></button>
                        <button class="btn btn-success"><a asp-area="" asp-controller="HotelRoom" asp-action="GetHotelRooms" asp-route-id="@Model.Id">See rooms</a></button>
                        <button class="btn btn-success"><a asp-area="" asp-controller="HotelRoom" asp-action="CreateHotelRoom" asp-route-id="@Model.Id">Add room</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Подключение скриптов Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>