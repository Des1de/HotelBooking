@model IEnumerable<HotelBooking.Domain.ViewModels.GetHotelsViewModel>
@{
    ViewData["Title"] = "Hotels Page";
}


<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hotel List</title>
  <!-- Подключение стилей Bootstrap -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Hotel List</h1>
    <div class="row">
      
      @if (Model == null)
      {
        <h5 >There are no hotels</h5>
        @if(User.IsInRole("Admin")){
          <h5 class="card-title"><a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="CreateHotel">Create hotel</a></h5>
        }
      }
      
      else
      {
        @if(User.IsInRole("Admin")){
          <h5 class="card-title"><a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="CreateHotel">Create hotel</a></h5>
        }
        @foreach (var hotel in Model)
        {
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="hotel1.jpg" class="card-img-top" alt="Hotel Image">
              <div class="card-body">
                <h5 class="card-title"><a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="GetHotel" asp-route-id="@hotel.Id">@hotel.Name</a></h5>
                <p class="card-text">@hotel.Description</p>
                <p class="card-text">Rating: @hotel.Rating</p>
                <p class="card-text">Country: @hotel.Country</p>
                <p class="card-text">City: @hotel.City</p>
              </div>
            </div>
          </div>
        }
      }


    </div>
  </div>

  <!-- Подключение скриптов Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>