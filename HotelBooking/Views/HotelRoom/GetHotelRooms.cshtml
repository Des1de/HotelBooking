@model IEnumerable<HotelBooking.Domain.ViewModels.HotelRoom.GetHotelRoomsViewModel>
@{
    ViewData["Title"] = "Hotels Page";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel List</title>
    <!-- Подключение стилей Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
    body {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body>
<div class="container">
    <h1 class="mt-5">Hotel List</h1>
    <div class="row">
        @if (Model == null)
                {
                    <h5>There are no rooms</h5>
                }
                else{
                    @foreach (var hotelRoom in Model)
                    {
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="hotel-image.jpg" alt="Hotel Image" class="img-fluid">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title"><a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="GetHotel" asp-route-id="@hotelRoom.HotelId">@hotelRoom.HotelName</a></h5>
                                        <p class="card-text">@hotelRoom.RoomType</p>
                                        <p class="card-text">Price per Day: @hotelRoom.Price</p>
                                        <p class="card-text">Flour Number: @hotelRoom.FloorNumber</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
        
    </div>
</div>

<!-- Подключение скриптов Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>