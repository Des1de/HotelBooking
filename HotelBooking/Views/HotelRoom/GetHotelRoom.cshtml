@model HotelBooking.Domain.ViewModels.HotelRoom.GetHotelRoomViewModel
@{
    ViewData["Title"] = "Hotels Page";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Information</title>
    <!-- Подключение стилей Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
    body {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body>
<div class="container">
    <h1 class="mt-5">Room Information</h1>
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="room1.jpg" class="card-img-top" alt="Room Image">
                <div class="card-body">
                    <h5 class="card-title">Hotel name: @Model.HotelName</h5>
                    <p class="card-text">Room Type: @Model.RoomType</p>
                    <p class="card-text">Price for Day: $@Model.Price</p>
                    <p class="card-text">Floor Number: @Model.FlourNumber</p>
                    <p class="card-text">Description: @Model.Description.</p>
                    <div class="mt-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <button class="btn btn-danger me-2"><a asp-area="" asp-controller="HotelRoom" asp-action="DeleteHotelRoom" asp-route-id="@Model.Id">Delete</a></button>
                            <button class="btn btn-success"><a asp-area="" asp-controller="HotelRoom" asp-action="EditHotelRoom" asp-route-id="@Model.Id">Edit</a></button>
                        }
                        <button class="btn btn-success"><a asp-area="" asp-controller="HotelRoom" asp-action="GetHotelRoomReviews" asp-route-hotelRoomId="@Model.Id">See reviews</a></button>
                        @if(User.Identity.IsAuthenticated){
                            <button class="btn btn-success"><a asp-area="" asp-controller="Reservation" asp-action="CreateReservation" asp-route-id="@Model.Id">Reserve</a></button>
                            <button class="btn btn-success"><a asp-area="" asp-controller="HotelRoom" asp-action="CreateHotelRoomReview" asp-route-id="@Model.Id">Create review</a></button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Подключение скриптов Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>